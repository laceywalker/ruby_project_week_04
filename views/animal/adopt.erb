<h1>ADOPT THIS ANIMAL</h1>


<p><%=@animal.animal_name%></p>
<img class="show_image" src=<%=@animal.image%> alt=<%@animal.animal_name%>>

<form action="/animals/<%=@animal.id%>/adopt" method="post">
<fieldset>
  <div class="custom-select">
    <label for="owner_select">Select Owner:</label>
    <select name="owner_id" id="owner_select">
      <% @owners.each do |owner| %>
          <option value=<%= owner.id %>><%= owner.name%></option>
        <% end %>
      </select>
  </div>
</fieldset>
  <input type="hidden" name="available" id="available" value="no">
  <input type="submit" value="Adopt Animal">
</form>
